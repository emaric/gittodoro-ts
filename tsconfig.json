{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "@/interactor/*": ["interactor/*"],
      "@/interactor/use-cases/*": ["interactor/use-cases/*"],
      "@/controller/*": ["controller/*"],
      "@/examples/*": ["examples/*"],
      "@/tests/*": ["tests/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["interactor", "controller", "examples"]
}
